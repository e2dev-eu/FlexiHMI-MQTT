      "properties": {
        "text": "Slider and buttons publish to demo/gauge.",
        "align": "center",
        "font_size": 14,
        "color": "#888888"
      }
    },
    {
      "id": "gauge1",
      "type": "gauge",
      "x": 100,
      "y": 80,
      "w": 250,
      "h": 250,
      "properties": {
        "min": 0,
        "max": 100,
        "value": 50,
        "mqtt_topic": "demo/gauge"
      }
    },
    {
      "id": "gauge_label",
      "type": "label",
      "x": 100,
      "y": 340,
      "w": 250,
      "h": 30,
      "properties": {
        "text": "Value: 50",
        "align": "center",
        "mqtt_topic": "demo/gauge",
        "format": "Value: %s"
      }
    },
    {
      "id": "slider_control",
      "type": "slider",
      "x": 400,
      "y": 150,
      "w": 400,
      "h": 20,
      "properties": {
        "min": 0,
        "max": 100,
        "value": 50,
        "mqtt_topic": "demo/gauge"
      }
    },
    {
      "id": "slider_label",
      "type": "label",
      "x": 400,
      "y": 120,
      "w": 400,
      "h": 25,
      "properties": {
        "text": "Control Slider:",
        "color": "#AAAAAA"
      }
    },
    {
      "id": "btn_0",
      "type": "button",
