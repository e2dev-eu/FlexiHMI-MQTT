{
  "version": 1,
  "widgets": [
    {
      "id": "title",
      "type": "label",
      "x": 10,
      "y": 10,
      "w": 1004,
      "h": 40,
      "properties": {
        "text": "Gauge Widget Example",
        "align": "center",
        "font_size": 24
      }
    },
    {
      "id": "title_note",
      "type": "label",
      "x": 10,
      "y": 50,
      "w": 1004,
